{
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "https://tauri.app",
    "buildPath": "./assets"
  },
  "package": {
    "productName": "Name",
    "version": "0.0.1"
  },
  "pywui": {
    "windows": [
      {
        "label": "splashscreen",
        "width": 800,
        "height": 500,
        "center": true,
        "decorations": false,
        "visible": false,
        "webview": {
          "url": "splashscreen.html"
        }
      },
      {
        "title": "PyWui App",
        "width": 1080,
        "height": 720,
        "titleBarStyle": "Transparent",
        "visible": true,
        "center": true,
        "label": "main"
      }
    ]
  },
  "icon": {
    "linux": "./icons/pywui.png",
    "macos": "./icons/pywui.png",
    "windows": "./icons/pywui.ico"
  }
}
